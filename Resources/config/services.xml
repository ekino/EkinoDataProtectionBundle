<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="ekino_data_protection.encryptor.default" class="Ekino\DataProtectionBundle\Encryptor\Encryptor" public="false">
            <argument />
            <argument />
        </service>

        <service id="ekino_data_protection.encryptor" alias="ekino_data_protection.encryptor.default" />

        <service id="Ekino\DataProtectionBundle\Encryptor\EncryptorInterface" alias="ekino_data_protection.encryptor" />

        <service id="ekino_data_protection.command.encryptor" class="Ekino\DataProtectionBundle\Command\EncryptCommand" public="false">
            <argument />
            <argument />
            <tag name="console.command" command="ekino-data-protection:encrypt"/>
        </service>

        <service id="ekino_data_protection.dependency_injection.env_var_encrypted_processor" class="Ekino\DataProtectionBundle\DependencyInjection\EnvVarEncryptedProcessor" public="false">
            <argument type="service" id="ekino_data_protection.encryptor" />

            <tag name="container.env_var_processor" />
        </service>

        <service id="ekino_data_protection.monolog.processor.gdpr" class="Ekino\DataProtectionBundle\Monolog\Processor\GdprProcessor" public="false">
            <argument type="service" id="ekino_data_protection.encryptor" />

            <tag name="monolog.processor" />
        </service>

        <service id="ekino_data_protection.anonymized_metadata.builder" class="Ekino\DataProtectionBundle\Meta\AnonymizedMetadataBuilder" public="false">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="Doctrine\Common\Annotations\Reader" />
        </service>

        <service id="ekino_data_protection.anonymized_metadata.validator" class="Ekino\DataProtectionBundle\Meta\AnonymizedMetadataValidator" public="false">
        </service>

        <service id="ekino_data_protection.anonymized.query_builder" class="Ekino\DataProtectionBundle\QueryBuilder\AnonymizedQueryBuilder" public="false">
        </service>

        <service id="ekino_data_protection.anonymize.command" class="Ekino\DataProtectionBundle\Command\AnonymizeDataCommand" public="true">
            <argument type="service" id="ekino_data_protection.anonymized_metadata.builder" />
            <argument type="service" id="ekino_data_protection.anonymized_metadata.validator" />
            <argument type="service" id="ekino_data_protection.anonymized.query_builder" />
            <tag name="console.command" command="ekino-data-protection:anonymize" />
        </service>
    </services>

</container>
